
<div class="table table-bordered table-striped px-md-2 container  py-5 h-100">
<H1> Livres emprunt√©s </H1>

<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Authors</th>
      <th>Language</th>
      <th>Published</th>
      <th>Edition</th>
      
      <th>Summary</th>
      <th>Quantity</th>
      
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.authors %></td>
        <td><%= book.language %></td>
        <td><%= book.published %></td>
        <td><%= book.edition %></td>
        
        <td><%= book.summary %></td>
        <td><%= book.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>