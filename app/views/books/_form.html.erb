<div class="table table-bordered table-striped px-md-2 container  py-5 h-100">
<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :isbn %>
    <%= form.text_field :isbn, placeholder: "Isbn du livre" %>
  </div>

  <div class="field">
    <%= form.label :titre %>
    <%= form.text_field :title, placeholder: "Saisir le titre du livre" %>
  </div>

  <div class="field">
    <%= form.label :auteurs %>
    <%= form.text_field :authors, placeholder: "Saisir les noms des auteurs"%>
  </div>

  <div class="field">
    <%= form.label :langue %>
    <%= form.text_field :language, placeholder: "Saisir la langue du livre ex Français" %>
  </div>

  <div class="field">
    <%= form.label :Date_Publication %>
    <%= form.date_select :published %>
  </div>

  <div class="field">
    <%= form.label :edition %>
    <%= form.text_field :edition, placeholder: "Saisir la maison d'édition du livre" %>
  </div>

  <div class="field">
    <%= form.label :résumé %>
    <%= form.text_area :summary, placeholder: "Resumé du livre -100 caracteres du livre" %>
  </div>

  <div class="field">
    <%= form.label :quantité %>
    <%= form.number_field :quantity, placeholder: "quantité du livre < à 100" %>
  </div>

  <div class="field">
    <%= form.label :portrait %>
    <%= form.file_field :portrait%>
  </div>

  <div class="actions ">
    <%= form.submit "Enregister le livre"  %>
  </div>
<% end %>
