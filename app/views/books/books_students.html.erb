<p id="notice"><%= notice %></p>

<h1>Books</h1>
<%= form_tag(search_path, :method => "get" , :required => true) do %>  
  
  <%= radio_button_tag(:search_by,"title",:checked => true,) %>Title
  <%= radio_button_tag(:search_by, "authors")%>Author
  <%= radio_button_tag(:search_by, "published")%>Published Date
  
    <%= search_field_tag :search, params[:search], placeholder: "Search" , :required => true %>  
      <%= button_tag do%> 
	  <%= t('Search')%>
	  <% end %>

<% end %>

<br>
<br><br><br><h3><u>All Books</u></h3>
<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Authors</th>
      <th>Language</th>
      <th>Published</th>
      <th>Edition</th>
      <th>Summary</th>
     
      <th>Availability</th>
    </tr>
  </thead>

  <tbody>
    <% @books_all.each do |book| %>
      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.authors %></td>
        <td><%= book.language %></td>
        <td><%= book.published %></td>
        <td><%= book.edition %></td>
        <td><%= book.summary %></td>
        
        
                <% if book.quantity > 0 %> 
          <td><%= "Available" %></td>
        <%else%>
        <td><%= "Unavailable" %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

