<h2>Checked Out Books</h2>
<table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Title</th>
      <th>Authors</th>
      <th>Language</th>
      <th>Published</th>
      <th>Edition</th>
      <th>Cover</th>
      <th>Subject</th>
      <th>Summary</th>
      <th>Category</th>
      <th>Special Collection</th>
      <th>Library</th>
      <th colspan="6"></th>
    </tr>
    </thead>
    <tbody>
    <% @checkout.each do |book| %>

      <tr>
        <td><%= book.isbn %></td>
        <td><%= book.title %></td>
        <td><%= book.authors %></td>
        <td><%= book.language %></td>
        <td><%= book.published %></td>
        <td><%= book.edition %></td>
        <td><%= book.cover %></td>
        <td><%= book.subject %></td>
        <td><%= book.summary %></td>
        <td><%= book.category %></td>
        <td><%= if book.special_collection  == true
			'Yes'
			else
			  'No'
			end
			 %></td>
        <td><%= Library.find(book.library_id).name %></td>
        <td><%= link_to 'Return Book', controller: "books", action: "returnBook", id: book %></td>
      </tr>
    <% end %>
    </tbody>        
</table>