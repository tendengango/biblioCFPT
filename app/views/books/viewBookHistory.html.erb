<div class="table table-bordered table-striped px-md-2 container  py-5 h-100">
<h1> Historique des Livres</h1>
<table>
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Title</th>
      <th>Issue Date</th>
      <th>Return Date</th>
      
    </tr>
  </thead>

  <tbody>
  <% if !@checkouts.nil? %>
    <% @checkouts.each do |checkout| %>
      <tr>
        <td><%= Student.find(checkout.student_id).name %></td>
        <td><%= Book.find(checkout.book_id).title %></td>
        <td><%= checkout.issue_date %></td>
        <td><%= checkout.return_date %></td>
      </tr>
    <% end %>
  <%end%>
  </tbody>
