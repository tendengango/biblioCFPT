<h1> Overdue Books and Fine</h1>
<table>
  <thead>
    <tr>
      <th>Student Name</th>
      <th>Title</th>
      <th>Author</th>
      <th>Edition</th>
      <th>Category</th>
      <th>Fine</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
  <% if ! @fines.nil? %>
    <% @fines.each do |fine| %>
      <% if fine[:fine_ammount] > 0 %>
        <tr>
          <td><%= Student.find(fine[:student_id]).name %></td>
          <td><%= Book.find(fine[:book_id]).title %></td>
          <td><%= Book.find(fine[:book_id]).authors %></td>
          <td><%= Book.find(fine[:book_id]).edition %></td>
          <td><%= Book.find(fine[:book_id]).category %></td>
          <td><%= fine[:fine_ammount] %></td>
        </tr>
      <%end %>
    <% end %>
  <%end%>
  </tbody>
</table>

<br>

<% if !current_librarian.nil? %>
	<%= link_to 'Back', librarians_path %>
<% else %>
	<%= link_to 'Back', students_path %>
<% end %>