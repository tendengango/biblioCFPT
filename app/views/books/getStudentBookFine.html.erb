<div class="table table-bordered table-striped px-md-2 container  py-5 h-100">
<h1> Livres Délais Expiré</h1>
<table>
  <thead>
    <tr>
      <th>Nom Etudiant</th>
      <th>Titre</th>
      <th>Auteur</th>
      <th>Edition</th>
      <th>Categorie</th>
      
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <%if !@fines.nil?%>
      <% @fines.each do |fine| %>
        <tr>
          <td><%= Student.find(fine[:student_id]).name %></td>
          <td><%= Book.find(fine[:book_id]).title %></td>
          <td><%= Book.find(fine[:book_id]).authors %></td>
          <td><%= Book.find(fine[:book_id]).edition %></td>
          <td><%= Book.find(fine[:book_id]).category %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>