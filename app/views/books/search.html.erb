<div class="table table-bordered table-striped px-md-2 container  py-5 h-100">
<p id="notice"><%= notice %></p>
<p>
 <table>
  <thead>
    <tr>
      <th>Isbn</th>
      <th>Titre</th>
      <th>Auteurs</th>
      <th>Langue</th>
      <th>Date Publication</th>
    
      <th>Résumé</th>
      
     
    </tr>
  </thead>

  <tbody>
  <% if !@results.nil? then @results.each do |result| %>
      <tr>
        <td><%= result.isbn %></td>
        <td><%= result.title %></td>
        <td><%= result.authors %></td>
        <td><%= result.language %></td>
        <td><%= result.published %></td>
      
        <td><%= result.summary %></td>  
		<% if current_admin.nil? %>
		    <td><%= link_to 'Show', controller: "books", action: "show", id: result%></td>
        <td><%= link_to 'Checkout', controller: "books", action: "checkout", id: result %></td>
        
		<% end %>
      </tr>
	  <% end %>
  </tbody>
</table>

<% end %>

<% if !current_student.nil? %>
	<%= link_to 'Retour', books_students_pathclass:"p-2 mb-2 bg-primary text-white" %>
<% else %>
	<%= link_to 'Retour', books_pathclass:"p-2 mb-2 bg-primary text-white" %>
<% end %>
