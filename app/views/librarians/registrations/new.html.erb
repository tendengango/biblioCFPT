<div class="table table-bordered table-striped col-md-6 container  py-5 h-100">
<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "librarians/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :nom %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="mb-3">
    <%= f.label :email, { class: "form-label"} %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="mb-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="mb-3">
    <%= f.hidden_field :approved, :value => 'No' %>
  </div>
  <strong>Note:</strong> Demandez d'abord à un administrateur d'approuver votre compte.<br><br>

  <div class="actions">
    <%= f.submit "Sign up", class:"p-2 mb-2 bg-primary text-white" %>
  </div>
<% end %>

<%= render "librarians/shared/links" %>
